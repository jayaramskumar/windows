<table>
    <thead>
        <tr>
        <th>Date</th>
        <th>Address</th>
        <th>Pincode</th>
        <th>Mobile</th>
        <th>Amount</th>
        <th>Payement</th>
        <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
            <tr>
                <td>   {{this.date}}</td>
                <td>{{this.delieveryDetails.address}}</td>
                <td>   {{this.delieveryDetails.pincode}}</td>
                <td>   {{this.delieveryDetails.mobile}}</td>
                <td>  {{this.totalAmount}}</td>
                <td>  {{this.paymentMethod}}</td>
                <td>  {{this.status}}</td>
                <td><a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a></td>
             
                
              
               
                
                
                
            </tr>
        {{/each}}
    </tbody>
</table>